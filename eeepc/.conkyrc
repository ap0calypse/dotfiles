alignment top_right
text_buffer_size 256
background yes
border_width 0
cpu_avg_samples 2
default_color dddddd
default_outline_color white
default_shade_color white
draw_borders no
draw_graph_borders yes
draw_outline no
draw_shades no
use_xft no
xftfont terminus:size=10
font -*-terminus-medium-*-*-*-14-*-*-*-*-*-iso8859-15
gap_x 10
gap_y 30
minimum_size 5 5
net_avg_samples 2
no_buffers yes
double_buffer yes
out_to_console no
own_window no
own_window_class Conky
own_window_type normal
stippled_borders 0
update_interval 1.0
uppercase no
use_spacer none

TEXT
$nodename - $sysname $kernel on $machine
$hr
${color ffbb00}Temperature:$color $acpitemp ° C
${color ffbb00}Battery:$color $battery
${battery_bar 3}
$hr
${color ffbb00}Uptime:$color $uptime
${color ffbb00}Frequency:$color $freq MHz
${color ffbb00}RAM Usage:$color $mem / $memmax $memperc% 
${membar 3}
${color ffbb00}CPU Usage:$color $cpu % 
${cpubar 3}
${cpugraph}
${color ffbb00}Processes:$color $processes  ${color ffbb00}Running:$color $running_processes
$hr
${color ffbb00}File systems:
 /     $color${fs_free /} / ${fs_size /} 
${fs_bar 3 /}${color ffbb00}
 /usr  $color${fs_free /usr} / ${fs_size /usr} 
${fs_bar 3 /usr}${color ffbb00}
 /home $color${fs_free /home} / ${fs_size /home} 
${fs_bar 3 /home}
${color ffbb00}Networking:$color
eth0  Up:$color ${upspeed eth0} k/s${color ffbb00} - Down:$color ${downspeed eth0} k/s
wlan0 Up:$color ${upspeed wlan0} k/s${color ffbb00} - Down:$color ${downspeed wlan0} k/s
ra0   Up:$color ${upspeed ra0} k/s${color ffbb00} - Down:$color ${downspeed ra0} k/s
ppp0  Up:$color ${upspeed ppp0} k/s${color ffbb00} - Down:$color ${downspeed ppp0} k/s
$hr
${color darkgrey}Name                 PID   CPU%   MEM%
${color lightgrey}${top name 1}    ${top pid 1} ${top cpu 1} ${top mem 1}
${color lightgrey}${top name 2}    ${top pid 2} ${top cpu 2} ${top mem 2}
${color lightgrey}${top name 3}    ${top pid 3} ${top cpu 3} ${top mem 3}
${color lightgrey}${top name 4}    ${top pid 4} ${top cpu 4} ${top mem 4}

